#include<iostream>
#include<array>
using namespace std;
template<size_t N>
bool exist(const array<int,N>& arr,int num) {
	if (N<=0) {
		return false;
	}
	int l = 0, r = arr.size() - 1;
	while (l <= r) {
		int mid = (l + r) / 2;
		if (arr[mid] == num) {
			return true;
		}
		else if (arr[mid] < num) {
			l = mid + 1;
		}
		else {
			r = mid - 1;
		}
	}
	return false;
}
int main()
{
	array<int, 5> arr = { 1, 3, 5, 7, 9 };
	cout << boolalpha;  
	cout << exist(arr, 3) << endl;  // true
	cout << exist(arr, 4) << endl;  // false

	return 0;
}